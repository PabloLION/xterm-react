{
  "name": "@pablo-lion/xterm-react",
  "version": "1.2.0",
  "description": "A React component for xterm.js terminal integration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate",
    "dev": "vite",
    "check": "biome check --write .",
    "check:no-fix": "biome check .",
    "build": "npx rimraf dist && tsc",
    "test": "NODE_OPTIONS=\"--loader ./tests/css-loader.mjs --require ./tests/css-require-hook.cjs\" tsx --test tests/*.test.ts",
    "publish": "./scripts/prepare-publish.sh",
    "compat:consumer:build-latest": "node version-compatibility-tests/scripts/consumer-pin-and-build.mjs",
    "compat:matrix": "node version-compatibility-tests/scripts/matrix-run-consumer.mjs",
    "compat:matrix:summary": "node version-compatibility-tests/scripts/summarize-matrix.mjs",
    "ci:compat:baseline": "node version-compatibility-tests/scripts/matrix-run-consumer.mjs -- --runtime node20 --linter eslint-prettier --react 18.3.1 --typescript 5.2.2 --eslint 8.57.0 --prettier 3.3.3",
    "ci:compat:latest": "node version-compatibility-tests/scripts/matrix-run-consumer.mjs -- --runtime node24 --linter eslint-prettier --react 19.1.1 --typescript 5.9.3 --eslint 9.13.0 --prettier 3.6.2",
    "history:update": "tsx scripts/update-history.ts"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "bmad-method": "^4.44.1",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.45.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.4.5",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0"
  },
  "keywords": [
    "xterm",
    "terminal",
    "console",
    "react",
    "xterm.js",
    "component"
  ],
  "author": "PabloLION <https://github.com/PabloLION/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PabloLION/xterm-react.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false
}
