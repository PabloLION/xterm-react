{
  "compilerOptions": {
    /* Projects */
    /* Language and Environment */
    "target": "es2020",
    "lib": ["dom", "ESNext"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Modules */
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Node",
    /* JavaScript Support */
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "declarationDir": "./dist/types",
    /* Interop Constraints */
    "verbatimModuleSyntax": true,
    /* Type Checking */
    "strict": true
    /* Completeness */
  }
}
